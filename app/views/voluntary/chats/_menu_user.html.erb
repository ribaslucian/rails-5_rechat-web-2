<style>
    .menu.top * {
        border: 0px !important;
        outline: 0px !important;
    }

    .menu.top .item:before {
        content: none !important;
    }

    #menu {
        display: none;
    }
</style>

<div class="ui inverted fixed top menu blue" style="padding: 3px 0;">

    <a href="<%= '/' %>" class="item">
        <i class="icon arrow left"></i>
    </a>

    <div class="item" style="
         position: relative;
         font-size: 17px;
         font-weight: 600 !important;
         letter-spacing: 1px;
         border: 0px !important;
         padding-left: 50px;">

        <div
            class="shadow-button"
            style="
            background: #1b68a3;
            height: 35px;
            width: 35px;
            display: table;
            margin-top: 10px !important;
            margin-bottom: 10px !important;
            margin: 0px auto;
            border-radius: 100%;
            position: absolute;
            left: 0px;
            top: -3px;
            ">

            <div style="
                 color: white;
                 left: 50%;
                 top: 50%;
                 position: absolute;
                 transform: translate(-50%, -50%);
                 font-weight: 200;
                 font-family: 'Ubuntu', sans-serif;
                 font-weight: 800;
                 font-size: 12px;
                 ">

                <%= I18n.transliterate(@contact.name[0]) %>
            </div>
        </div>

        <%= @contact.name %>
    </div>
</div>
