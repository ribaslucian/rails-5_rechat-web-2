            <div class="ui main container">
                <%= yield %>
            </div>
        </div>

        <%= render 'layouts/alerts/alerts' %>
        <%= render 'layouts/partials/loading' %>

        <br/><br/>
        <br/><br/>
        <br/>

    </body>
</html>
