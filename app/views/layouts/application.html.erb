<!DOCTYPE html>
<html>
    <head>
        <title>WhatsApp Simulator</title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>


        <%= stylesheet_link_tag 'application', media: 'all' %>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css" rel="stylesheet">

        <%= javascript_include_tag 'application' %>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>
    </head>

    <body>
        <% if session[:user] %>
          <%= render "layouts/menus/#{session[:user]['type_acronym_id']}" %>
          <style>
              html, body {
                  background: #f4f4f4;
              }
          </style>
        <% end %>

        <div class="ui main container">
            <%= yield %>
        </div>

        <div class="ws-loading-global ui active dimmer active">
            <div class="ui loader"></div>
        </div>

        <br/>
        <br/>

<%#*<input type="button" value="Say hello" onClick="showAndroidToast('Hello Android!')" />%>
        
        <style>
            .jq-toast-single {
                padding: 15px 20px;
                border-radius: 6px;
                border: 2px solid #c9ba9b;
            }
        </style>

        <script type="text/javascript">
          function showAndroidToast(toast) {
              Android.showToast(toast);
          }

          $(document).ready(function () {
              $.toast({
                  heading: 'Credencial Inválida',
                  text: 'Não foi encontrado a combinação usuário e senha informado.',
                  position: 'top-center',
                  // icon: 'warning',
                  hideAfter: 5000,
                  showHideTransition: 'fade',
                  bgColor: '#fffaf3',
                  textColor: '#8e6628',
                  loaderBg: '#c9ba9b'
                  // allowToastClose: true
              });
          })
        </script>



        <br/><br/><br/>
    </body>
</html>
