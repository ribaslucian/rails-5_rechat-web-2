<br/>

<style>
    body {
        background-color: #333;
    }

    .ui.basic.segment {
        border-radius: 8px;
    }
</style>

<div class="ui middle centered three column grid stackable">
    <div class="column">
        <div class="ui very padded basic segment">

            <h1 class="ui header">
                <div class="content">
                    <a href="<%= '/guest/users/login' %>" class="icon material-icons" style="position: relative; top: 2px; color: cornflowerblue">arrow_back</a>

                    <b>Cadastre-se</b>
                </div>
            </h1>

            <br/>

            <%= form_with(model: @user, url: '/guest/users/sign_in', method: 'post', class: 'ui form', local: true) do |f| %>


                <div class="field">
                    <%= f.label(:name, '* Nome de usuário:') %>
                    <%= f.text_field(:name, placeholder: '* Nome de usuário:') %>
                </div>

                <div class="field">
                    <%= f.label(:type_acronym_id, '* Tipo de usuário:') %>

                    <select class="ui dropdown" name="user[type_acronym_id]" id="user_type_acronym_id">
                        <% Acronym.where(data_refer: 'users.type').each do |a| %>
                          <option value="<%= a.id %>" <%= 'selected' if a.id == 201 %>><%= a.name %></option>
                        <% end %>
                    </select>
                </div>

                <div class="field">
                    <%= f.label(:entity_name, 'Nome da Pessoa:') %>
                    <%= f.text_field(:entity_name, placeholder: 'Nome  da Pessoa:') %>
                </div>

                <br/>

                <button type="submit" class="ui button large blue ws-center">
                    Cadastrar
                </button>
              <% end %>
          </div>
      </div>
  </div>

  <br/>